<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd 
	 					http://www.springframework.org/schema/util 
	 					http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="application" class="com.epam.theater.Application"
		autowire="byName">
		<property name="userService" ref="userService" />
		<property name="auditoriumService" ref="auditoriumService" />
		<property name="eventService" ref="eventService" />
	</bean>


	<bean id="userService"
		class="com.epam.theater.service.impl.UserServiceImpl"
		autowire="byName">
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="eventService"
		class="com.epam.theater.service.impl.EventServiceImpl"
		autowire="byName">
		<property name="eventDao" ref="eventDao" />
	</bean>

	<bean id="auditoriumService"
		class="com.epam.theater.service.impl.AuditoriumServiceImpl"
		autowire="byName">
		<property name="auditoriumDao" ref="auditoriumDao" />
	</bean>

	<bean id="bookingService"
		class="com.epam.theater.service.impl.BookingServiceImpl"
		autowire="byName">
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="dataBase" class="com.epam.theater.bean.DataBase">

		<property name="users">
			<list>
				<ref bean="user1" />
				<ref bean="user2" />
				<ref bean="user3" />
			</list>
		</property>

		<property name="auditoriums">
			<list>
				<ref bean="auditorium1" />
				<ref bean="auditorium2" />
				<ref bean="auditorium3" />
				<ref bean="auditorium4" />
				<ref bean="auditorium5" />
			</list>
		</property>

		<property name="events">
			<list />
		</property>

	</bean>

	<bean id="userDao" class="com.epam.theater.dao.impl.UserDaoImpl"
		autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

	<bean id="auditoriumDao"
		class="com.epam.theater.dao.impl.AuditoriumDaoImpl" autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

	<bean id="eventDao" class="com.epam.theater.dao.impl.EventDaoImpl"
		autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

