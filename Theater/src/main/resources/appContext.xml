<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd 
	 					http://www.springframework.org/schema/util 
	 					http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="userService" class="com.epam.theater.service.impl.UserServiceImpl" autowire="byName">
		<property name="userDao" ref="userDao" />
	</bean>

	<bean id="eventService" class="com.epam.theater.service.impl.EventServiceImpl" autowire="byName">
		<property name="eventDao" ref="eventDao" />
	</bean>

	<bean id="auditoriumService" class="com.epam.theater.service.impl.AuditoriumServiceImpl" autowire="byName">
		<property name="auditoriumDao" ref="auditoriumDao" />
	</bean>


	<bean id="dataBase" class="com.epam.theater.bean.DataBase">

		<property name="users">
			<list>
				<ref bean="user1"/>
				<ref bean="user2"/>
				<ref bean="user3"/>
			</list>
		</property>

	</bean>

	<bean id="userDao" class="com.epam.theater.dao.impl.UserDaoImpl" autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

	<bean id="auditoriumDao" class="com.epam.theater.dao.impl.AuditoriumDaoImpl" autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

	<bean id="eventDao" class="com.epam.theater.dao.impl.EventDaoImpl" autowire="byName">
		<property name="dataBase" ref="dataBase" />
	</bean>

	<bean id="user1" class="com.epam.theater.bean.User">
		<constructor-arg index="0" value="0" />
		<constructor-arg index="1" value="Albert" />
		<constructor-arg index="2" value="Zarankovich"  />
		<constructor-arg index="3" value="Albert_Zarankovich@epam.com" />
	</bean>

	<bean id="user2" class="com.epam.theater.bean.User">
		<constructor-arg index="0" value="1" />
		<constructor-arg index="1" value="Peter" />
		<constructor-arg index="2" value="Burko" />
		<constructor-arg index="3" value="Peter_Burko@epam.com" />
	</bean>

	<bean id="user3" class="com.epam.theater.bean.User">
		<constructor-arg index="0" value="2" />
		<constructor-arg index="1" value="Nikita" />
		<constructor-arg index="2" value="Mihalchuk" />
		<constructor-arg index="3" value="Nikita_Mihalchuk@epam.com" />
	</bean>

	<bean id="user4" class="com.epam.theater.bean.User">
		<constructor-arg index="0" value="3" />
		<constructor-arg index="1" value="Andrey" />
		<constructor-arg index="2" value="Meleh" />
		<constructor-arg index="3" value="Andrey_Meleh@epam.com" />
	</bean>
	
	<bean id="user5" class="com.epam.theater.bean.User">
		<constructor-arg index="0" value="4" />
		<constructor-arg index="1" value="Alex" />
		<constructor-arg index="2" value="Zaycev" />
		<constructor-arg index="3" value="Alex_Zaycev@epam.com" />
	</bean>

